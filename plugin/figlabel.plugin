if exists('g:loaded_figlabel') | finish | endif " prevent loading file twice

let s:save_cpo = &cpo " save user coptions
set cpo&vim " reset them to defaults

" command to run our plugin
command! -nargs=1 Figlabel lua require'figlabel'.figlabel(<f-args>)

let &cpo = s:save_cpo " and restore after
unlet s:save_cpo

let g:loaded_figlabel = 1

